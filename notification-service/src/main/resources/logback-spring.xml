<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty name="SERVICE_NAME" source="spring.application.name" defaultValue="unknown-service"/>
    <springProperty name="LOGGING_SERVICE_URL" source="logging.service.url" defaultValue="http://localhost:8086"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CENTRAL" class="com.example.common.logging.CentralLogAppender">
        <serviceName>${SERVICE_NAME}</serviceName>
        <loggingServiceUrl>${LOGGING_SERVICE_URL}</loggingServiceUrl>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="CENTRAL"/>
    </root>
</configuration>